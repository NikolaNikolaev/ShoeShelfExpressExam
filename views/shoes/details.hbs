<main>
    <div class="offer-details">
        <h1>{{name}}</h1>
        <div class="info">
            <img src="{{imageUrl}}" alt="{{name}}">
            <div class="description">{{description}}
                <br>
                <br>
                <p> <strong>Buyers:</strong> {{buyers.length}}</p>
                <br>
                <p class="price">${{price}}</p>
            </div>
        </div>
        <div class="actions">
            {{#if isCreator}}

            <a href="">Edit</a>
            <a href="">Delete</a>

            {{else if hasUserBoughtShoes}}

            <span>You bought it</span>

            {{else}}

            <a href="/shoes/{{_id}}/buy">Buy</a>

            {{/if}}
        </div>
    </div>
</main>